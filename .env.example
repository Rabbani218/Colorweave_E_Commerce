# Copy this file to .env and fill in values for development
# SECRET_KEY used by Flask for sessions and CSRF. Set to a secure random value in production.
SECRET_KEY=changeme
# SQLite example (relative path). For production use a proper DB URL like postgresql.
DATABASE_URL=sqlite:///data/app.db
# Optional admin user created automatically on first run if set
ADMIN_PASSWORD=adminpass
# Optional Redis URL for server-side sessions (e.g. redis://localhost:6379/0)
REDIS_URL=
# Optional max upload size in bytes
MAX_CONTENT_LENGTH=5242880

# AI configuration (local defaults)
AI_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_PATH=data/ai_index
IMAGE_BACKEND=local
